<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wirelessorder.wirelessorder_client.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y37"
            android:background="@color/login_1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_login"
                style="@style/login_bgl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50"
                android:gravity="center"
                android:text="@string/app_name1" />
        </LinearLayout>

        <LinearLayout
            style="@style/login_bgm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y50"
            android:layout_marginTop="@dimen/y1"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <AutoCompleteTextView
                    android:id="@+id/edittext_user_name"
                    style="@style/login_texti"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y44"
                    android:layout_marginTop="@dimen/y7"
                    android:completionThreshold="1"
                    android:drawableLeft="@drawable/login_user"
                    android:dropDownHeight="wrap_content"
                    android:dropDownHorizontalOffset="@dimen/x37"
                    android:dropDownWidth="@dimen/x250"
                    android:singleLine="true" >
                </AutoCompleteTextView>

                <TextView
                    android:id="@+id/textView1"
                    style="@style/warning_text_tip"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_marginTop="@dimen/y4"
                    android:visibility="gone"
                    android:text="TextView" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/login_3" />

        <FrameLayout
            style="@style/login_bgm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y44" >

            <EditText
                android:id="@+id/edittext_user_password"
                style="@style/login_texti"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:drawableLeft="@drawable/login_password"
                android:inputType="textPassword" />

            <TextView
                style="@style/warning_text_tip"
                android:layout_marginRight="@dimen/x8"
                android:visibility="gone"
                android:text="TextView" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y83"
            android:background="@color/login_1" >

            <Button
                android:id="@+id/button_login"
                style="@style/login_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginBottom="@dimen/y6"
                android:layout_marginLeft="@dimen/x4"
                android:layout_marginRight="@dimen/x4"
                android:layout_marginTop="@dimen/y7"
                android:text="@string/login" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_bottom"
                style="@style/login_bgt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1" />

            <TextView
                style="@style/login_bgt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y25"
                android:layout_marginTop="@dimen/y1"
                android:background="@color/login_2" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>